      .g-b.g-b--m--3of4.fr
        %hr.rule.mbl
        %h2.heading.heading--italic.heading--m.mbl Featured Events
        .g.g--dib
          - 3.times do
            .deck.g-b.g-b--s--1of2.g-b--l--1of3
              = link_to "event.html" do
                .media.media--medium{style: "background-image: url(#{lorem.image('600x350')})"}
                %h4.deck-title Event Title Goes Here
                %dl.dictionary.deck-description
                  %dt.dictionary-term Date:
                  %dd.dictionary-definition May 12, 2015
                  %dt.dictionary-term Time:
                  %dd.dictionary-definition 8:00p
                  %dt.dictionary-term Location:
                  %dd.dictionary-definition Longwood
                  %dt.dictionary-term Category:
                  %dd.dictionary-definition Ministry
        %hr.rule.mbl.mtxl
        %h2.heading.heading--italic.heading--m.mbl All Events
        %ul.has-events
          %li
            = link_to "event.html", class: "event" do
              .event-date{style: "background-image: url(#{lorem.image('350x350')})"} 12 <span>May</span>
              %h4.event-title Fusce Ipsum Mattis Euismod Pharetra

                %dt.dictionary-term Date:
                %dd.dictionary-definition May 12, 2015
                %dt.dictionary-term Time:
                %dd.dictionary-definition 8:00p
                %dt.dictionary-term Location:
                %dd.dictionary-definition Longwood
                %dt.dictionary-term Category:
                %dd.dictionary-definition Ministry
